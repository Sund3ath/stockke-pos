{
  "name": "stockke-pos-backend",
  "version": "1.0.0",
  "description": "Backend server for Stockke POS system",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn src/index.ts",
    "build": "tsc",
    "typeorm": "ts-node ./node_modules/typeorm/cli.js",
    "migration:generate": "npm run typeorm migration:generate -- -n",
    "migration:run": "npm run typeorm migration:run",
    "create-db": "ts-node src/scripts/create-database.ts",
    "seed": "ts-node src/scripts/seed-data.ts",
    "seed-products": "ts-node src/scripts/seed-products.ts",
    "seed-tables": "ts-node src/scripts/seed-tables.ts",
    "create-admin": "ts-node src/scripts/create-admin-user.ts",
    "setup": "npm run create-db && npm run migration:run && npm run seed && npm run create-admin && npm run seed-products && npm run seed-tables",
    "dev:setup": "npm run create-db && npm run dev",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@apollo/server": "^4.10.2",
    "@types/mongoose": "^5.11.96",
    "apollo-server-express": "^3.13.0",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "graphql": "^16.8.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.13.3",
    "mysql2": "^3.9.2",
    "reflect-metadata": "^0.2.1",
    "type-graphql": "^2.0.0-beta.6",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.11.29",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.2"
  }
}
